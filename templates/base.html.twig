{% block header %}
        <!-- Header-->
        <header>

        <div class="logo">


            <a href="{{ path('home') }}"><img src="image logo.png" alt="logo" width="100px" height="80px"></a>

        </div>


        <nav>
            <ul>
                <li>
                    <a href="{{ path('home') }}">Accueil</a>
                </li>
                <li>
                    <a href="{{ path('app_quisommes') }}">Qui sommes nous ?</a>
                </li>

                {% if is_granted('ROLE_ADMIN') %}

                <li>
                    <a href="{{ path('all_products') }}">Gestion du stock</a>
                </li>
                {% else %}
                 <li>
                    <a href="{{ path('all_products') }}">Boutique</a>
                </li>

                {% endif %}


                <li>
                    <a href="{{ path('app_contact') }}">Contact</a>
                </li>

                {% if app.user %}
                <li>
                <a href="{{ path('app_logout',) }}" class="btn btn-danger btn-xs">Déconnexion</a>
                </li>
                {% else %}
                <li>
                    <a href="{{ path('app_register') }}">S'inscrire</a>
                </li>
                <li>
                    <a href="{{ path('app_login') }}"><i class="fa-solid fa-user fa-2xl"></i></a>
                </li>
                {% endif %}
                <li>
                    <a href="{{ path('app_cart') }}"><i class="fa-solid fa-cart-shopping fa-2xl"></i></i></a>
                    {% set panier = app.session.get('panier') %}
                    {% set qtePanier = 0 %}
                    {% for quantite in panier %}
                       {% set qtePanier = qtePanier + quantite %}
                    {% endfor %}   
                    <span class="badge bg-dark text-white ms-1 rounded-pill">{{ qtePanier }}</span>
                </li>



            </ul>
        </nav>

    </header>
{% endblock %}


