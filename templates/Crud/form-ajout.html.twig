{% extends 'base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block body %}
<div class="container">
    <h1>Ajout d'un produit</h1>

    {# {{ form(formBook) }} #}

    {{ form_start(formProduit) }}
        <div class="row">
            <div class="col">
                {{ form_row(formProduit.nom) }}
            </div>
            <div class="col">
                {{ form_row(formProduit.prix) }}
            </div>
            <div class="col-12">
                {{ form_row(formProduit.description) }}
            </div>
            <div class="col-6">
                {{ form_row(formProduit.categorie) }}
            </div>
            <div class="col-6">
                {{ form_row(formProduit.stock) }}
            </div>
            <div class="col-6">
                {{ form_row(formProduit.imageFile) }}
            </div>
        </div>
        <input type="submit" class="btn btn-primary mt-2 mb-4" value="Enregistrer" />
    {{ form_end(formProduit) }}    
</div>
{% endblock %}