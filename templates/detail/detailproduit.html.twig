{% extends 'base.html.twig' %}


{% block body %}




<section class="py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="row gx-4 gx-lg-5 align-items-center">
                    <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="{{ asset ('/images/produits/'~ produit.imageName) }} " alt="..." /></div>
                    <div class="col-md-6">
                        {# <div class="small mb-1">SKU: BST-498</div> #}
                        <h1 class="display-5 fw-bolder">{{produit.nom}}</h1>
                        <div class="fs-5 mb-5">
                            {# <span class="text-decoration-line-through">$45.00</span> #}
                            <h2>Prix: {{produit.prix}}€</h2>
                        </div>
                        <p class="lead">{{produit.description}} <h3>Quantité en stock: {{produit.stock}}</h3></p>
                        <div class="d-flex align-items-center">
    <button class="btn btn-outline-dark flex-shrink-0 me-2" type="button">
        <i class="bi-cart-fill me-1"></i>
        <a class="btn btn-outline" href="{{ path('app_cart') }}">Ajouter au panier</a>
    </button>
    <div class="text-center">
        <a class="btn btn-outline-success mt-auto" href="{{ path('all_products') }}">Retour</a>
    </div>
</div>

                    </div>
                </div>
            </div>
</section>



















{% endblock %}